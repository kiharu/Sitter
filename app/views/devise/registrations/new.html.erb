<%= render 'partial/navbar' %>

<div class="container devise-new-form">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center">登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render('partial/deviseErrorMsg') %>

        <div class="form-group row">
          <label>Email</label>
          <div class="input-group"> <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'メールアドレス' %>
          </div>
        </div>

        <div class="form-group row">
          <label>Password <span class="font-normal">(※6文字以上)</span></label>
          <div class="input-group"> <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
            <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: 'パスワード' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="input-group"> <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'パスワードの確認' %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>